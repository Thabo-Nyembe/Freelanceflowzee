# FreeFlow App Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===========================================
# NEXT.JS CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="FreeFlow KAZI"
NODE_ENV=development

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Video Transcription Service
ASSEMBLY_AI_API_KEY=your_assembly_ai_key
DEEPGRAM_API_KEY=your_deepgram_api_key

# ===========================================
# PAYMENT PROCESSING
# ===========================================
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ===========================================
# CLOUD STORAGE
# ===========================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Google Cloud Storage (Alternative)
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_KEYFILE=path_to_service_account_json

# ===========================================
# EMAIL SERVICES
# ===========================================
RESEND_API_KEY=your_resend_api_key
SENDGRID_API_KEY=your_sendgrid_api_key

# ===========================================
# REAL-TIME SERVICES
# ===========================================
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# ===========================================
# VIDEO PROCESSING
# ===========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
GOOGLE_ANALYTICS_ID=your_ga_id
SENTRY_DSN=your_sentry_dsn

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# For local development
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres
DIRECT_DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# ===========================================
# SECURITY
# ===========================================
NEXTAUTH_SECRET=your_nextauth_secret_random_string
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=true
ENABLE_AI_FEATURES=true
ENABLE_VIDEO_TRANSCRIPTION=true
ENABLE_REAL_TIME_COLLABORATION=true

# ===========================================
# API KEYS FOR INTEGRATIONS
# ===========================================
# Social Media APIs
TWITTER_API_KEY=your_twitter_api_key
LINKEDIN_API_KEY=your_linkedin_api_key

# Design Tools
FIGMA_ACCESS_TOKEN=your_figma_access_token

# Project Management
NOTION_API_KEY=your_notion_api_key
SLACK_BOT_TOKEN=your_slack_bot_token

# ===========================================
# LOGGING & DEBUGGING
# ===========================================
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false