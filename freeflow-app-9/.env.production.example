# ============================================================================
# AI CREATE - PRODUCTION ENVIRONMENT VARIABLES
# ============================================================================
#
# This file contains example environment variables for production deployment.
# Copy this file to .env.production and fill in your actual values.
#
# IMPORTANT: Never commit .env.production with real credentials to git!
# ============================================================================

# ----------------------------------------------------------------------------
# GENERAL SETTINGS
# ----------------------------------------------------------------------------

# Node environment (must be "production")
NODE_ENV=production

# Server port (default: 9323)
PORT=9323

# Application URL (your production domain)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# API Base URL (if different from app URL)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ----------------------------------------------------------------------------
# AI SERVICES (Required for real AI integrations)
# ----------------------------------------------------------------------------

# OpenAI API (for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id

# Anthropic API (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI (for Gemini models)
GOOGLE_AI_API_KEY=your-google-ai-key-here

# Replicate API (for image/video models)
REPLICATE_API_TOKEN=r8_your-replicate-token-here

# OpenRouter (for multi-model access)
OPENROUTER_API_KEY=sk-or-your-openrouter-key-here

# ----------------------------------------------------------------------------
# AUTHENTICATION (Next-Auth)
# ----------------------------------------------------------------------------

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here-min-32-chars

# NextAuth URL (your app URL)
NEXTAUTH_URL=https://yourdomain.com

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# ----------------------------------------------------------------------------
# DATABASE (if using external DB)
# ----------------------------------------------------------------------------

# PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# Supabase (alternative)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ----------------------------------------------------------------------------
# STORAGE & CDN
# ----------------------------------------------------------------------------

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Cloudflare (for CDN/Images)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# ----------------------------------------------------------------------------
# MONITORING & ERROR TRACKING
# ----------------------------------------------------------------------------

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-organization
SENTRY_PROJECT=your-project

# LogRocket (session replay)
NEXT_PUBLIC_LOGROCKET_APP_ID=your-logrocket-app-id

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (auto-enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# ----------------------------------------------------------------------------
# REDIS & CACHING (optional)
# ----------------------------------------------------------------------------

# Upstash Redis (for rate limiting, caching)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Redis (self-hosted)
REDIS_URL=redis://user:password@host:6379

# ----------------------------------------------------------------------------
# PAYMENT PROCESSING (if using Stripe)
# ----------------------------------------------------------------------------

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key
STRIPE_SECRET_KEY=sk_live_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ----------------------------------------------------------------------------
# EMAIL (for notifications)
# ----------------------------------------------------------------------------

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Resend
RESEND_API_KEY=re_your-resend-api-key

# SMTP (generic)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# ----------------------------------------------------------------------------
# SECURITY & RATE LIMITING
# ----------------------------------------------------------------------------

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------

# AI Create feature flags
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_ENABLE_MODEL_COMPARISON=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_VERSION_HISTORY=true

# Deployment phase (for gradual rollout)
NEXT_PUBLIC_DEPLOYMENT_PHASE=1  # 1=10%, 2=50%, 3=100%

# ----------------------------------------------------------------------------
# LOGGING & DEBUG
# ----------------------------------------------------------------------------

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# ----------------------------------------------------------------------------
# BUILD OPTIMIZATION
# ----------------------------------------------------------------------------

# Enable bundle analyzer (only for analysis builds)
ANALYZE=false

# Skip build-time type checking (not recommended for production)
# SKIP_TYPE_CHECK=false

# Skip build-time linting (not recommended for production)
# SKIP_LINT=false

# ----------------------------------------------------------------------------
# AI CREATE SPECIFIC SETTINGS
# ----------------------------------------------------------------------------

# Default AI model
NEXT_PUBLIC_DEFAULT_AI_MODEL=gpt-4o-mini

# Max tokens per generation
NEXT_PUBLIC_MAX_TOKENS=4000

# Temperature default
NEXT_PUBLIC_DEFAULT_TEMPERATURE=0.7

# localStorage quota warning threshold (MB)
NEXT_PUBLIC_STORAGE_QUOTA_WARNING=8

# Maximum generations to store locally
NEXT_PUBLIC_MAX_STORED_GENERATIONS=500

# Enable mock AI responses (for testing without API keys)
NEXT_PUBLIC_ENABLE_MOCK_AI=false

# ----------------------------------------------------------------------------
# NOTES
# ----------------------------------------------------------------------------
#
# 1. Required Variables (minimum for basic deployment):
#    - NODE_ENV
#    - PORT
#    - NEXT_PUBLIC_APP_URL
#    - NEXTAUTH_SECRET
#    - NEXTAUTH_URL
#
# 2. AI Integration (choose based on models you want to support):
#    - For GPT models: OPENAI_API_KEY
#    - For Claude models: ANTHROPIC_API_KEY
#    - For Gemini models: GOOGLE_AI_API_KEY
#    - For all models: OPENROUTER_API_KEY (single key for multiple providers)
#
# 3. Optional but Recommended:
#    - NEXT_PUBLIC_SENTRY_DSN (error tracking)
#    - NEXT_PUBLIC_GA_MEASUREMENT_ID (analytics)
#    - UPSTASH_REDIS_REST_URL (rate limiting)
#
# 4. Security Best Practices:
#    - Use strong NEXTAUTH_SECRET (min 32 characters)
#    - Rotate API keys regularly
#    - Use environment-specific keys (dev/staging/prod)
#    - Never commit .env.production to version control
#    - Use secret management (AWS Secrets Manager, Vercel Secrets, etc.)
#
# 5. Generation Commands:
#    - Generate NEXTAUTH_SECRET: openssl rand -base64 32
#    - Generate random password: openssl rand -hex 32
#    - Test environment: npm run start:production
#
# ============================================================================
