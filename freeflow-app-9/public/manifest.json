{
  "name": "KAZI - All-in-One AI-Powered Creative Platform",
  "short_name": "KAZI",
  "description": "AI-powered platform for creative professionals: video studio, design tools, project management, invoicing, escrow payments, and 12+ AI models - all in one place",
  "start_url": "/dashboard",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#7c3aed",
  "background_color": "#000000",
  "scope": "/",
  "categories": ["business", "productivity", "finance", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
  "id": "kazi-app",
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "My Day",
      "short_name": "My Day",
      "description": "AI-powered daily planner",
      "url": "/dashboard/my-day",
      "icons": [
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Projects",
      "short_name": "Projects",
      "description": "Manage your projects",
      "url": "/dashboard/projects",
      "icons": [
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Team and client messages",
      "url": "/dashboard/messages",
      "icons": [
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Video Studio",
      "short_name": "Video",
      "description": "Professional video editing",
      "url": "/dashboard/video-studio-v2",
      "icons": [
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Dashboard view on desktop"
    },
    {
      "src": "/screenshots/dashboard-mobile.png",
      "sizes": "360x640",
      "type": "image/png",
      "platform": "narrow",
      "label": "Dashboard view on mobile"
    },
    {
      "src": "/screenshots/projects-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Projects management on desktop"
    },
    {
      "src": "/screenshots/payment-mobile.png",
      "sizes": "360x640",
      "type": "image/png",
      "platform": "narrow",
      "label": "Payment processing on mobile"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://kazi.app/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+kazi",
      "url": "/dashboard/projects?project=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/projects/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "share_target": {
    "action": "/projects/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf", ".json", ".csv"]
        }
      ]
    }
  },
  "capture_links": "existing-client-navigate",
  "handle_links": "preferred",
  "display_override": ["window-controls-overlay", "standalone"],
  "features": [
    "cross-origin-isolated"
  ]
} 